    <title class="- topic/title " xtrf="file:/D:/syncprojects/blog/git-tech-writers/git_validation.dita" xtrc="title:1;4:12">Validation</title>
	<prolog class="- topic/prolog " xtrf="file:/D:/syncprojects/blog/git-tech-writers/git_validation.dita" xtrc="prolog:1;5:10">
