    <title class="- topic/title " xtrf="file:/D:/syncprojects/blog/topics/migrating_word_to_dita_bdc/preparing_word_document_for_migration.dita" xtrc="title:1;5:12">Preparing Word Document for Migration</title>
    <prolog class="- topic/prolog " xtrf="file:/D:/syncprojects/blog/topics/migrating_word_to_dita_bdc/preparing_word_document_for_migration.dita" xtrc="prolog:1;6:13">
