    &lt;/div&gt;
&lt;/xsl:template&gt;

&lt;xsl:template match="chapter"&gt;
    &lt;h2&gt;
        &lt;xsl:value-of select="title"/&gt;
    &lt;/h2&gt;
    &lt;xsl:apply-templates select="section"/&gt;
&lt;/xsl:template&gt;

&lt;xsl:template match="section"&gt;
    &lt;h3&gt;
        &lt;xsl:value-of select="title"/&gt;
    &lt;/h3&gt;
