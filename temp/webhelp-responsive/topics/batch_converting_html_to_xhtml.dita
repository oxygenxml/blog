    <title class="- topic/title " xtrf="file:/D:/syncprojects/blog/topics/batch_converting_html_to_xhtml.dita" xtrc="title:1;4:12">Batch converting HTML to XHTML</title>
  <prolog class="- topic/prolog " xtrf="file:/D:/syncprojects/blog/topics/batch_converting_html_to_xhtml.dita" xtrc="prolog:1;5:11">
    <author class="- topic/author " xtrf="file:/D:/syncprojects/blog/topics/batch_converting_html_to_xhtml.dita" xtrc="author:1;6:13">Radu Coravu</author>
    <metadata class="- topic/metadata " xtrf="file:/D:/syncprojects/blog/topics/batch_converting_html_to_xhtml.dita" xtrc="metadata:1;7:15">
